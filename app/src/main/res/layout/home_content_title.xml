<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription,MissingPrefix,UseCompoundDrawables,TooDeepLayout,HardcodedText,RtlSymmetry,TextFields,UselessLeaf,UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingTop="@dimen/spacing_mmiddle"
            android:paddingRight="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_mmiddle">

            <TextView
                android:id="@+id/explore_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Explore Live Feed"
                android:textAllCaps="true"
                android:textColor="@color/be_hero_dark"
                android:textSize="15sp"
                android:textStyle="bold"
                app:fontFamily="@fonts/montserrat_bold" />

            <ma.ensaf.veryempty.widget.MaterialRippleLayout
                android:id="@+id/post_update_ripple"
                style="@style/RippleStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/spacing_medium">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/post_update_image_view"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/bg_circle"
                        android:padding="@dimen/space_6"
                        app:srcCompat="@drawable/ic_add" />

                    <TextView
                        android:id="@+id/post_update_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:layout_marginLeft="@dimen/spacing_medium"
                        android:background="@drawable/round_white_button_bg"
                        android:text="Post Update"
                        android:textColor="@color/be_hero_dark_grey"
                        android:textStyle="bold"
                        app:fontFamily="@fonts/montserrat_bold" />

                </LinearLayout>

            </ma.ensaf.veryempty.widget.MaterialRippleLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/md_grey_100" />

    </LinearLayout>

</layout>